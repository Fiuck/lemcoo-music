/* pages/home-video/index.wxss */
.video {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.item {
  width: 48%;
}

.hasLoading {
  padding-top: 28rpx;
  padding-bottom: 20rpx;
}

.hasMore {
  font-size: 26rpx;
  color: #a8a8a8;
  padding-top: 28rpx;
  padding-bottom: 20rpx;
  position: relative;
}

.hasMore::after {
  content: '';
  position: absolute;
  width: 100rpx;
  height: 1rpx;
  background-color: #dadada;
  top: 45rpx;
  left: -110rpx;
}

.hasMore::before {
  content: '';
  position: absolute;
  width: 100rpx;
  height: 1rpx;
  background-color: #dadada;
  top: 45rpx;
  left: 140rpx;
}